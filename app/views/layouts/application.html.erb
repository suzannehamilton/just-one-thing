<!DOCTYPE html>
<html>
<head>
  <title>JustOneThing</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2">
      <ul class="nav nav-tabs nav-stacked">
        <li><%= link_to "Home", controller: "welcome" %></li>
        <li><%= link_to "Random task", controller: "tasks", action: "random" %></li>
        <li><%= link_to "New task", controller: "tasks", action: "new" %></li>
        <li><%= link_to "All tasks", controller: "tasks" %></li>
      </ul>
    </div>

    <div class="span10">
      <% [:notice, :error, :alert, :success].each do |level| %>
        <% unless flash[level].blank? %>
          <div class="<%= flash_class(level) %>">
            <%= content_tag :span, flash[level] %>
          </div>
        <% end %>
      <% end %>

      <%= yield %>
    </div>
  </div>
</div>

</body>
</html>
