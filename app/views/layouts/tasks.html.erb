<% content_for :content do %>
  <div class="row-fluid">
    <div class="span2">
      <ul class="nav nav-tabs nav-stacked">
        <li><%= link_to "Home", user_root_path %></li>
        <li><%= link_to "Random task", random_tasks_path %></li>
        <li><%= link_to "New task", new_task_path %></li>
        <li><%= link_to "All tasks", all_tasks_path %></li>
      </ul>
    </div>

    <div class="span10">
      <% [:notice, :error, :alert, :success].each do |level| %>
        <% unless flash[level].blank? %>
          <div class="<%= flash_class(level) %>">
            <%= content_tag :span, flash[level] %>
          </div>
        <% end %>
      <% end %>
      
      <%= content_for?(:task_content) ? yield(:task_content) : yield %>
    </div>
  </div>
  
<% end %>



<%= render template: "layouts/application" %>