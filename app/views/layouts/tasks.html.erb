<!DOCTYPE html>
<html>
<head>
  <title>JustOneThing</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2">
      <ul class="nav nav-tabs nav-stacked">
        <li><%= link_to "Home", user_root_path %></li>
        <li><%= link_to "Random task", random_tasks_path %></li>
        <li><%= link_to "New task", new_task_path %></li>
        <li><%= link_to "All tasks", all_tasks_path %></li>
      </ul>
    </div>

    <div class="span10">
      <% [:notice, :error, :alert, :success].each do |level| %>
        <% unless flash[level].blank? %>
          <div class="<%= flash_class(level) %>">
            <%= content_tag :span, flash[level] %>
          </div>
        <% end %>
      <% end %>

      <% if user_signed_in? %>
        <% #link_to "My Profile", user_root_path%>
        <%= link_to('Logout', destroy_user_session_path, :method=>'delete') %>  
      <%end%>

      <%= yield %>
    </div>
  </div>
</div>

</body>
</html>
